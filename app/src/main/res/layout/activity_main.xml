            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cd1"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="-30dp"
                android:text="Sample"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:layout_toEndOf="@+id/textView"
                android:ems="10"

                android:inputType="textPersonName" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_toEndOf="@id/editTextTextPersonName"
                android:src="@drawable/menu"></ImageView>


        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/delbtn"
            android:layout_width="124dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shapee"
            android:gravity="center"
            android:text="Delete Button"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/opnbtn"
            android:layout_width="117dp"
            android:layout_height="29dp"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/delbtn"
            android:background="@drawable/shapee2"
            android:gravity="center"
            android:text="Open Button"
            android:textSize="15dp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/opnbtn"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:textColor="@color/purple_700"
            android:layout_marginTop="5dp"
            android:text="text" />


    </RelativeLayout>
